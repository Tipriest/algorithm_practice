{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile",
      "command": "g++",
      "args": [
        "-g",
        "-std=c++2a",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
      ],
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceRoot}"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      },
      "group": "build"
    },
    {
      "label": "compile_with_pinocchio",
      "command": "g++",
      "args": [
        "-g",
        "-std=c++2a",
        "${file}",
        "-DPINOCCHIO_WITH_URDFDOM",
        "-DPINOCCHIO_ENABLE_TEMPLATE_INSTANTIATION",
        "-I/opt/openrobots/lib/pkgconfig/../../include",
        "-I/opt/openrobots/include",
        "-I/usr/local/include/eigen3",
        "-I/usr/include/eigen3",
        "-L/opt/openrobots/lib/pkgconfig/../../lib",
        "-L/opt/openrobots/lib",
        "-Wl,-rpath,/opt/openrobots/lib/pkgconfig/../../lib",
        "-lpinocchio_default",
        "-lpinocchio_parsers",
        "-lpinocchio_casadi",
        "-lboost_filesystem",
        "-lboost_serialization",
        "-lboost_system",
        "-lurdfdom_sensor",
        "-lurdfdom_model_state",
        "-lurdfdom_model",
        "-lurdfdom_world",
        "-lconsole_bridge",
        "-Wl,-rpath,/opt/openrobots/lib",
        "-lcasadi",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
      ],
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceRoot}"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      },
      "group": "build"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: g++ 生成活动文件",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "调试器生成的任务。"
    },
    {
      "label": "build",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "${workspaceFolder}/cpplibs/pinocchio/src/main.cpp",
        "-std=c++2a",
        "-o",
        "${workspaceFolder}/cpplibs/pinocchio/src/main",
        "-I /opt/openrobots/include" // 替换为实际的头文件路径
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
